ch:CHAR
    nmbr_char:INTEGER:=0
    nmbr_word:INTEGER:=1
    nmbr_vowls:INTEGER:=0
    
BEGIN
    
    write('this is a sentence that ends with a poiunt .')
FOR ch FROM 0 TO 10 STEP 1  DO
    IF( ch <> '.') THEN
    nmbr_char:=nmbr_char+1
END_FOR
WHILE (ch:=" " ) DO
    nmbr_word:=nmbr_word+1
END_WHILE
IF(ch:= "a","e","i","u","o","y" or "A"...)
THEN nmbr_vowls++

write (nmbr_char)

